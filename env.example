# API Server Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SOCKET_URL=ws://localhost:8000

# Authentication
NEXT_PUBLIC_JWT_SECRET=your_jwt_secret_here

# Google Maps API (for admin panel maps)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
NEXT_PUBLIC_APP_NAME=SmartBus Admin
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=production

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://your-admin-domain.com

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true 